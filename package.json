		"script": "ts-node scripts"
	},
	"devDependencies": {
		"@types/node": "^18.19.39",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"eslint": "^8.57.0",
		"prettier": "^3.3.2",
		"prettier-eslint": "^16.3.0",
		"prettier-eslint-cli": "^8.0.1",
		"ts-node": "^10.9.2",
		"typedoc": "^0.26.1",
		"typescript": "~5.4.2"
	}
}
